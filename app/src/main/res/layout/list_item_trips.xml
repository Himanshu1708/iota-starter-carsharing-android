<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start Loc"
        android:id="@+id/startLocation"
        android:textColor="@color/primary_material_light"
        android:textSize="17dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aug 16, 2016"
        android:id="@+id/date"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textIsSelectable="false"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/startLocation"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End Loc"
        android:id="@+id/endLocation"
        android:textColor="@color/primary_material_light"
        android:textSize="17dp"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1 Min, Score 0"
        android:id="@+id/duration"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textIsSelectable="false"
        android:textSize="17dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/endLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/endLocation"
        android:layout_marginRight="20dp" />

</RelativeLayout>