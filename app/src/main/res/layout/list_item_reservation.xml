<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/carThumbnail"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/models"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Michael Hall Car"
        android:id="@+id/behaviorTitle"
        android:layout_alignTop="@+id/carThumbnail"
        android:layout_toEndOf="@+id/carThumbnail"
        android:textColor="@color/primary_material_light"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="05/08/16 11:25 PM"
        android:id="@+id/dateAndTime"
        android:paddingLeft="10dp"
        android:layout_below="@+id/behaviorTitle"
        android:layout_alignLeft="@+id/behaviorTitle"
        android:layout_marginBottom="3dp"
        android:textColor="@color/abc_secondary_text_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yonge and Finch ave."
        android:id="@+id/carAddress"
        android:paddingLeft="10dp"
        android:textColor="@color/abc_secondary_text_material_light"
        android:layout_below="@+id/dateAndTime"
        android:layout_toEndOf="@+id/carThumbnail"
        android:textSize="15dp" />

</RelativeLayout>