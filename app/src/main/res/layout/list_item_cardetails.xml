<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Availability"
        android:id="@+id/availability"
        android:textColor="@color/accent_material_light_1"
        android:textSize="21dp"
        android:paddingTop="15dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date and Time:"
        android:id="@+id/behaviorTitle"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_below="@+id/availability" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sep. 10th, 2016"
        android:id="@+id/dateValue"
        android:textColor="#000"
        android:textSize="17dp"
        android:layout_alignParentEnd="true"
        android:paddingTop="7dp"
        android:layout_below="@+id/availability" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pickup &amp; Dropoff at:"
        android:id="@+id/fromTitle"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_below="@+id/behaviorTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menlo Park"
        android:id="@+id/locationAddress"
        android:textColor="#000"
        android:textSize="15dp"
        android:paddingTop="7dp"
        android:layout_below="@+id/behaviorTitle"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price:"
        android:id="@+id/plateTitle"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_below="@+id/fromTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$15/hr, $40/day"
        android:id="@+id/priceValue"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_alignTop="@+id/plateTitle"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Specifications"
        android:id="@+id/specifications"
        android:textColor="@color/accent_material_light_1"
        android:textSize="21dp"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/plateTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Make &amp; Model:"
        android:id="@+id/makeModelTitle"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_below="@+id/specifications"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jeep Wrangler"
        android:id="@+id/makeModelValue"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_alignTop="@+id/makeModelTitle"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Year:"
        android:id="@+id/yearTitle"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/makeModelValue"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2007"
        android:id="@+id/yearValue"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_below="@+id/makeModelValue"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mileage"
        android:id="@+id/mileageTitle"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yearValue"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="60,000"
        android:id="@+id/mileageValue"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_alignTop="@+id/mileageTitle"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reviews"
        android:id="@+id/reviews"
        android:textColor="@color/accent_material_light_1"
        android:textSize="21dp"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/mileageTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Reviews Yet"
        android:id="@+id/reviewsValue"
        android:textColor="#000"
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:layout_below="@+id/reviews"
        android:layout_alignParentStart="true" />

</RelativeLayout>